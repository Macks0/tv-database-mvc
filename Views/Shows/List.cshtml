@{
}

@model List<TV_Show_Database.Models.Entities.Show>

<h1>Shows</h1>

<table class="table">
<thead>
<tr>
<th>ID</th>
<th>Title</th>
<th>Release Year</th>
<th>Rating</th>
<th>Recommend</th>
<th></th>
</tr>
</thead>
<tbody>
@foreach (var show in Model)
{
    <tr>
                <td>@show.Id</td>
                <td>@show.Title</td>
                <td>@show.ReleaseYear</td>
                <td>@show.Rating</td>
                <td>@show.Recommend</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Shows" asp-action="Edit" asp-route-id="@show.Id">Edit</a>
                </td>
    </tr>
}
</tbody>
</table>